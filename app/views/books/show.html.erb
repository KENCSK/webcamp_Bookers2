<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', book: @newbook, user: @book.user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody></tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%=link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <th>
                <% if current_user.already_favorited?(@book) %>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :create do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                <% end %>
                <%= @book.favorites.count %>
              </th>
              <% if @user.id == current_user.id %>
                <th><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-sm btn-success' %></th>
                <th><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-sm btn-danger'%> </th>
              <% end %>
            </tr>
        </tbody>
      </table>

        <% if @book.errors.any? %>
          <h3 class="text-danger"><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
          <% @book.errors.full_messages.each do |message| %>
            <ul><li class="text-danger"><%= message %></li></ul>
          <% end %>
        <% end %>

      <div>
        <p>コメント件数：<%= @book.book_comments.count %></p>
        <% @book.book_comments.each do |book_comment| %>
        <%= attachment_image_tag  @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= book_comment.user.name %>
          <%= book_comment.content %>
          <%= book_comment.created_at.strftime('%Y/%m/%d') %>
          <% if book_comment.user == current_user %>
          <div>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-sm btn-danger' %>
          </div>
          <% end %>
        <% end %>
      </div>

      <div>
      <%= form_with(model:[@book, @book_comment], local: true ) do |f| %>
        <%= f.text_area :content, rows:'5',placeholder: "コメントをここに" %>
        <%= f.submit '送信', :class=>'btn btn-success btn-md' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
