<div>
  <p>コメント件数：<%= book.book_comments.count %></p>
  <table class="table">
  <% book.book_comments.each do |book_comment| %>
  <tr>
  <th><%= attachment_image_tag  @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %></th>
    <th><%= book_comment.user.name %></th>
    <th><%= book_comment.content %></th>
    <% if book_comment.user == current_user %>
    <div>
      <th><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: 'btn btn-sm btn-danger' %></th>
    </div>
    <% end %>
  <% end %>
  </tr>
  </table>
</div>
